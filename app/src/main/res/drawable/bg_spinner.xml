<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="5dp" />
            <stroke
                android:width="2px"
                android:color="#B7C9D6" />
        </shape>
    </item>
    <item android:gravity="center_vertical|right" android:right="15dp">
        <layer-list>
            <item android:width="8dp" android:height="12dp" android:gravity="center">
                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/text_gray" />
                    </shape>
                </rotate>
            </item>
            <item android:width="30dp" android:height="12dp" android:bottom="10dp" android:gravity="center">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>